<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmissionActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeaderLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/backButtonEmissionScreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:background="@drawable/arrow"
                android:backgroundTint="@color/lightGray"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emission"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/lineTop"
        style="@style/lineBoarder"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeaderLayoutHome" />


    <TextView
        android:id="@+id/calculatorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbon Footprint Calculator"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineTop"/>

    <EditText
        android:id="@+id/carbonCostInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Carbon Cost of CO2/kWh"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:background="@drawable/round_box_container"
        android:backgroundTint="@color/lowGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculatorTitle"/>

    <TextView
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@drawable/round_box_container"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carbonCostInput"/>

    <TextView
        android:id="@+id/calculationOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 kg"
        android:textColor="@color/green"
        android:fontFamily="@font/quicksand"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculateButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>