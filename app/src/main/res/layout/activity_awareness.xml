<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AwarenessActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topHeaderLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/backButtonAwarenessScreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:rotation="180"
                android:background="@drawable/arrow"
                android:backgroundTint="@color/lightGray"/>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awareness"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:fontFamily="@font/quicksand"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/lineTop"
        style="@style/lineBoarder"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeaderLayoutHome" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineTop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/energySavingTipsButtonAware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/energyTipsIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/energy"
                android:backgroundTint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:text="Energy Saving Tips"
                android:textSize="20dp"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/energyTipsIcon" />


            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/lightGray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            style="@style/lineBoarder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topHeaderLayoutHome" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/energyCrisisAware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/climateNewsIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/emission"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:text="Near future Energy Crisis"
                android:textSize="20dp"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                app:layout_goneMarginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/climateNewsIcon" />


            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/lightGray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            style="@style/lineBoarder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topHeaderLayoutHome" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/projectButtonAware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/recentProjectIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/aware_icon"
                android:backgroundTint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:text="On-Going/Up-Coming Sustainable\nDevelopment Projects in Nepal"
                android:textSize="16dp"
                android:fontFamily="@font/quicksand"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/recentProjectIcon" />


            <TextView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/lightGray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            style="@style/lineBoarder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topHeaderLayoutHome" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>